{
  "defs": {
    "jobDefinition": {
      "oneOf": [
        { "type": "integer", "minimum": 1 },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "count": { "type": "integer", "minimum": 0 },
            "resources": { "$ref": "resources.json#/defs/resources" }
          }
        }
      ]
    },
    "masterJobOverride": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resources": { "$ref": "resources.json#/defs/resources" }
      }
    },
    "distributed": {
      "type": "object",
      "properties": {
        "ps": { "$ref": "#/defs/jobDefinition" },
        "worker": { "$ref": "#/defs/jobDefinition" },
        "master": { "$ref": "#/defs/masterJobOverride" }
      }
    },
    "horovod": {
      "type": "object",
      "properties": {
        "workers": { 
          "oneOf": [
            { "type": "integer", "minimum": 1 },
            { 
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "count": { "type": "integer", "minimum": 1 },
                "processes": { "type": ["null", "integer"], "minimum": 1 }
              }
            }
          ]
        }
      }
    },
    "tensorflow": {
      "type": "object",
      "properties": {
        "version": {
          "type": ["string", "null"],
          "pattern": "^\\d+\\.\\d+\\.\\d+|latest$"
        },
        "tensorboard": { "type": "boolean" },
        "distributed": {
          "oneOf": [
            { "type": "null" },
            { "$ref": "#/defs/distributed" }
          ]
        },
        "horovod": {
          "oneOf": [
            { "type": "null" },
            { "$ref": "#/defs/horovod" }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
